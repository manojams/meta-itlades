SCRIPT=/usr/bin/wvdial
PROVIDER=Telit
RUNAS=root
NAME=wvdial
TTYMODEM=/dev/ttyMODEM3

PIDFILE=/var/run/$NAME.pid
LOGDIR=/sdcard/log/
LOGNAME=$NAME.log
LOGFILE=$LOGDIR$LOGNAME

start() {
  if [ ! -d $LOGDIR ]; then
      mkdir $LOGDIR
  fi

 if [ -f /sys/class/net/eth1/operstate ]; then
    state=$(</sys/class/net/eth1/operstate)
    if [ "$state" == "up" ]; then
        #echo 'Not running since ETH1 is up' >&2
        logger -s 'Not running since ETH1 is up'
        return 1
    fi
    else
    logger -s 'ifdown eth1 since not UP'
     ifdown eth1
  fi

  if [ -e /home/root/nameserver.txt ]; then
     logger -s 'file Nameserver found hence not running'
     return 1
  fi


  if [ -f /var/run/$PIDNAME ] && kill -0 $(cat /var/run/$PIDNAME); then
    echo 'Service already running' >&2
    return 1
  fi
 local i=0
 while [ ! -e $TTYMODEM  ] && [ "$i" -lt "30" ]; do
       (( ++i ))
       #echo 'Wait GSM ttyMODEM' >&2
       logger -s 'Wait GSM ttyMODEM'
       sleep 1
 done

 if [ ! -e $TTYMODEM ]; then
       logger -s 'TTYMODEM not found, exit'
       return 1
  fi

  #echo "Starting service $NAME …" >&2
  logger -s "Starting service $NAME"
  local CMD="$SCRIPT $PROVIDER &>> \"$LOGFILE\" & echo \$!"
  su -c "$CMD" $RUNAS > "$PIDFILE"
  echo 'Service started' >&2
}

stop() {
  if [ ! -f "$PIDFILE" ] || ! kill -0 $(cat "$PIDFILE"); then
    echo 'Service not running' >&2
    return 1
  fi
  echo 'Stopping service…' >&2
  kill -15 $(cat "$PIDFILE") && rm -f "$PIDFILE"
  echo 'Service stopped' >&2
}

uninstall() {
  echo -n "Are you really sure you want to uninstall this service? That cannot be undone. [yes|No] "
  local SURE
  read SURE
  if [ "$SURE" = "yes" ]; then
    stop
    rm -f "$PIDFILE"
    echo "Notice: log file is not be removed: '$LOGFILE'" >&2
    update-rc.d -f $NAME remove
    rm -fv "$0"
  fi
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  uninstall)
    uninstall
    ;;
  restart)
    stop
    start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart|uninstall}"
esac
